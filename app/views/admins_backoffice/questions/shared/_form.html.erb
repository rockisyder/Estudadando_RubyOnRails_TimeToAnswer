<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= action_message %></h1>
    </div>
<!-- /.col-lg-12 -->
</div>



<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
           <%= "#{action_message} Assunto / Área" %>
        </div>
        <div class="panel-body">
            <div class="row">
                <% if @question.errors.any? %>
                    <div class="alert alert-danger alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

                    <ul>
                        <% @question.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>

                    </div>
                <% end %>
                <div class="col-lg-6">
                    <%= form_with(model: [ :admins_backoffice, @question ]) do |form| %>

                        <div class="form-group">
                            <%= form.label :Descrição %>
                            <%= form.text_area :description, class:"form-control", placeholder:" Descrição da Perguntas", rows: 5 %>
                        </div>
                        <div class="form-group">
                            <%= form.label :Assunto %>
                            <%= form.collection_select( :subject_id, @subjects, :id, :description, {}, {class:"form-control"}) %>
                        </div>
                           <div id = 'answers'> 
                                <%= form.fields_for :answers do |answer|%>
                                    <%= render partial: 'answer_fields', locals: { f: answer} %>
                                <% end %>
                                <%= link_to_add_association "Adicionar Resposta]", form, :answers%>

                           </div>

                          
                                    <button type="submit"
                                    class="btn btn-success btn-icon-split"
                                    <span class="cla=ss"fas fa-check"">
                                            <i class="fa fa-check"></i>
                                    </span>
                                    <span class="text">Salvar</span>
                                    </button>
                    <% end %>
                </div>
            <!-- /.col-lg-6 (nested) -->
            </div>
         <!-- /.row (nested) -->
        </div>
      <!-- /.panel-body -->
    </div>
 <!-- /.panel -->
</div>




                                   