<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= t('messages.listing', model: @admins.model_name.human(count: 2)) %></h1>
    </div>
<!-- /.col-lg-12 -->
</div>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
               
                <th><%=translate_attribute(@admins, :email)%></th>
                <th>
                    <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle" do %>
                        <i class="fa fa-plus"></i>
                    <% end %>
                </th>
            
            </tr>
        </thead>
        <tbody>
            <% @admins.each do |admin| %>
                 <tr>
                   
                    <td><%= admin.email%></td>
                
                    <td style = "width: 30px">
                    
                    <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle" do %>
                        <i class="fa fa-edit"></i>
                    <% end %>
                     </td>
                    <td style = "width: 30px">
                    <%= button_to admins_backoffice_admin_path(:id => admin.id), :method => :delete, class:"btn btn-danger btn-circle btn-sm", data: { confirm: "Deseja realmente excluir?" } do %> 
                        <i class=" fa fa-trash"></i>
                    <% end %>
                    
                   
                    </td>
                   
                </tr>
         
            <% end %>
        </tbody>
    </table>
    
        <div class="text-center">
            <%= paginate @admins %>
        </div>
    
</div>
                         